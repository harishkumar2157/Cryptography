#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char keyword[] = "CIPHER";
    char plain[] = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
    char cipher[27] = "";
    int used[26] = {0}, k = 0;

    // Add keyword letters
    for(int i = 0; keyword[i]; i++) {
        char ch = toupper(keyword[i]);
        if(!used[ch-'A']) {
            cipher[k++] = ch;
            used[ch-'A'] = 1;
        }
    }

    // Add remaining letters
    for(int i = 0; i < 26; i++)
        if(!used[i])
            cipher[k++] = 'A'+i;

    char text[100];
    printf("Enter plaintext (CAPS): ");
    scanf("%s", text);

    printf("Ciphertext: ");
    for(int i=0;text[i];i++)
        printf("%c", cipher[text[i]-'A']);

    return 0;
}
