#include <stdio.h>
#include <string.h>

int modInverse(int a) {
    for (int x = 1; x < 26; x++)
        if ((a * x) % 26 == 1)
            return x;
    return -1;
}

int main() {
    char cipher[200];
    int a = 7, b = 25;
    int a_inv = modInverse(a);

    printf("Enter ciphertext (CAPS): ");
    scanf("%s", cipher);

    printf("Decrypted text: ");
    for (int i = 0; cipher[i] != '\0'; i++) {
        int C = cipher[i] - 'A';
        int P = (a_inv * (C - b + 26)) % 26;
        printf("%c", P + 'A');
    }
    return 0;
}
