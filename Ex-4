#include <stdio.h>
#include <string.h>

int main() {
    char text[100], key[100];
    int i;

    printf("Enter plaintext: ");
    scanf("%s", text);

    printf("Enter key: ");
    scanf("%s", key);

    int textLen = strlen(text);
    int keyLen = strlen(key);

    for (i = 0; i < textLen; i++) {
        char ch = ((text[i] - 'A') + (key[i % keyLen] - 'A')) % 26 + 'A';
        printf("%c", ch);
    }

    return 0;
}
